  "verses": [
    {
      "number": 1,
      "lines": [
        "Hoe lang, o HEER’, mijn toeverlaat,",
        "Vergeet Gij mijnen jammerstaat?",
        "Hoe lang zult Gij, in mijn ellenden,",
        "Van mij Uw vriend’ lijk aanschijn wenden?",
        "Daar al mijn moed en kracht vergaat."
      ],
      "syllables": [
