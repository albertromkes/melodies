        ["Dat", "Gij", "al-", "leen", "de", "HEER’", "moogt", "he-", "ten;"],
        ["Die", "gro-", "te", "Naam", "van", "’t hoog-", "ste", "We-", "zen."],
        ["Doe", "’t we-", "reld-", "rond", "eer-", "bie-", "dig", "vre-", "zen."]
      ]
