        ["Wan-", "neer", "Uw", "ij-", "ver", "nie-", "mand", "spaar-", "de,"],
        ["Maar", "hen", "ver-", "trad", "als", "slijk", "der-", "aar-", "de."]
      ]
    },
    {
      "number": 7,
      "lines": [
        "Sla hen en hunne prinsen, HEER’,",
        "Als Oreb en als Zeëb neer.",
        "Doe al hun vorsten, hoe verheven,",
        "Als Zebah en Zalmuna sneven;",
        "Die met geweld Gods land en daken",
        "Zich wilden terbezitting maken."
      ],
      "syllables": [
        ["Sla", "hen", "en", "hun-", "ne", "prin-", "sen,", "HEER’,"],
