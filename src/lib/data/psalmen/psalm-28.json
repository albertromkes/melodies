        ["Trek", "mij", "niet", "weg,", "o", "Op-", "per-", "ko-", "ning,"],
        ["Met", "hen,", "wier", "ar-", "ge-", "lis-", "tig-", "heid,"],
        ["In", "schijn", "van", "vre-", "de,", "kwaad", "be-", "reidt."]
